#------------------------------------------
# variable
#------------------------------------------
variable "name" {
  type = string
}

#------------------------------------------
# ECSクラスター作成
#------------------------------------------
resource "aws_ecs_cluster" "this" {
  name = var.name
}

#------------------------------------------
# output
#------------------------------------------
output "cluster_name" {
  value = aws_ecs_cluster.this.name
}
